# bring in rules for testing
import testing ;

project
    : requirements
        <library>/boost/test//boost_unit_test_framework
        <threading>multi
        <link>static
        <toolset>gcc:<cxxflags>-Wno-unused-local-typedefs
    ;

test-suite "quick_check"
    :
        [ run array.cpp ]
        [ run basic.cpp ]
        [ run char_gen.cpp ]
        [ run class_gen.cpp ]
        [ run constant_gen.cpp ]
        [ run normal_gen.cpp ]
        [ run string_gen.cpp ]
        [ run transform_gen.cpp ]
        [ run uniform_gen.cpp ]
        [ run vector_gen.cpp ]
        [ run zip_gen.cpp ]
    ;
